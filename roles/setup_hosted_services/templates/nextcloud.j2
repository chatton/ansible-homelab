---
version: '3.2'
services:
  nextcloud:
    labels:
      ie.cianhatton.backup.enabled: "true"
      ie.cianhatton.backup.schedule: "{{backups.schedule_keys.nightly}}"
    image: nextcloud
    container_name: nextcloud
    restart: unless-stopped
    ports:
      - 8081:80
    volumes:
      - data:/var/www/html
volumes:
  data:

networks:
  default:
    name: mariadb_net
    external: true
